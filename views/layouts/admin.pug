doctype html
html(lang="fr")
  head
    title= title
    meta(charset="utf8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/foundation.min.css')
    link(rel='stylesheet', href='/stylesheets/style.min.css')
    link(rel='stylesheet', href='/stylesheets/admin.min.css')
    link(rel='stylesheet', href='/stylesheets/foundation-icons/foundation-icons.css')

  body.admin
    include ../includes/public/header.pug

    div#main.wrapper
      div.row.expanded
        section.small-12.columns
          block content

    include ../includes/public/footer.pug

  // Socket.io library generated by socket.io node module (not a hosted file)
  script(src="/socket.io/socket.io.js")

  // AngularJS
  script(src="/javascripts/angularjs/1.5.8/angular.min.js")
  script(src="/javascripts/angularjs/1.5.8/angular-messages.min.js")
  script(src="/javascripts/angularjs/1.5.8/angular-animate.min.js")

  // Angular Foundation
  script(src="/javascripts/angular-foundation/angular-foundation.min.js")
  // Angucomplete Alt
  script(src="/javascripts/angucomplete-alt.min.js")

  // More modules on demand
  block angularModules

  // App scripts
  script(src="/javascripts/app.js")
  script(src="/javascripts/app.services.js")
  script(src="/javascripts/app.controllers.js")
  script(src="/javascripts/app.directives.js")

  // More special controllers
  block angularControllers

  // Bootstrap Angular (Not THAT Bootstrap, just bootstrap my Angular :) )
  script(src="/javascripts/angular-bootstrap.js")

  // Font Awesome (personal API key)
  script(src="https://use.fontawesome.com/8e10cfa5d1.js")

  block extraBottomScripts
