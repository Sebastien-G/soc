extends ../../layouts/default

block content
  h1= title

  if req && req.user

    h2 Invitations en attente

    if invitations.length > 0
      each user in invitations
        friend-badge(data-uid=user.uid, data-firstname=user.firstname, data-lastname=user.lastname, data-profile-pic=user.profilePic)
        button-add-friend(data-uid=user.uid, data-friendship-status=user.friendshipStatus, data-action=user.action)
    else
      p.callout.secondary
        em Vous n’avez aucune invitation en attente d’acceptation

    h2 Invitations envoyées
    if sentRequests.length > 0
      each user in sentRequests
        friend-badge(data-uid=user.uid, data-firstname=user.firstname, data-lastname=user.lastname, data-profile-pic=user.profilePic)
        button-add-friend(data-uid=user.uid, data-friendship-status=user.friendshipStatus, data-action=user.action)

    else
      p.callout.secondary
        em Vous n’avez aucune invitation en attente d’acceptation

  else
    p You will be escorted out
