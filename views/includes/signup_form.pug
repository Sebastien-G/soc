  if (formData === undefined) {
    var formData = {'firstname': '',
      'lastname': '',
      'username': '',
      'username-repeat': '',
      'password': ''
    };
  }


form(action="/signup", method="post")

  div.row
    div.small-6.columns(class=(formMessages && formMessages.firstname) ? 'field-error' : '')
      label(for="firstname") Pr√©nom
      input(type="text", id="firstname", name="firstname", required="required", value=formData.firstname)
      if formMessages && formMessages.firstname
        p.field-error-message= formMessages.firstname

    div.small-6.columns(class=(formMessages && formMessages.lastname) ? 'field-error' : '')
      label(for="lastname") Nom de famille
      input(type="text", id="lastname", name="lastname", required="required", value=formData.lastname)
      if formMessages && formMessages.lastname
        p.field-error-message= formMessages.lastname

  div.row
    div.small-12.columns(class=(formMessages && formMessages.username) ? 'field-error' : '')
      label(for="username") Adresse e-mail
      input(type="email", id="username", name="username", required="required", value=formData.username)
      if formMessages && formMessages.username
        p.field-error-message= formMessages.username

  div.row
    div.small-12.columns(class=(formMessages && formMessages['username-repeat']) ? 'field-error' : '')
      label(for="username-repeat") Adresse e-mail (confirmation)
      input(type="email", id="username-repeat", name="username-repeat", required="required", value=formData['username-repeat'])
      if formMessages && formMessages['username-repeat']
        p.field-error-message= formMessages['username-repeat']

      // -
        if formErrors
          if formErrors.usernameTaken
            p= formErrors.usernameTaken

  div.row
    div.small-12.columns(class=(formMessages && formMessages.password) ? 'field-error' : '')
      label(for="password") Mot de passe
      input(type="password", id="password", name="password", required="required", value="")
      if formMessages && formMessages.password
        p.field-error-message= formMessages.password
  // -
    div.row
      div.small-12.columns
        ="Date de naissance"
        div.row
          div.small-4.columns
            select(id="birthday", name="birthday", required="required")
              each val in days
                option(value=val)= val
          div.small-4.columns
            select(id="birthmonth", name="birthmonth", required="required")
              each val, index in months
                option(value=index)= val
          div.small-4.columns
            select(id="birthyear", name="birthyear", required="required")
              each val in years
                option(value=val)= val


  div.row
    div.small-12.columns
      input.button.expanded.success(type="submit", value="Inscription")
