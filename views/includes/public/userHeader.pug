if req && req.user
  section.user-header
    h1= user.firstname + ' ' + user.lastname

    //img(src="user")

    if user.uid != req.user.uid
      div.user-buttons
        button-add-friend(data-uid=user.uid, data-friendship-status=user.friendshipStatus, data-action=user.addButtonAction)
        span(ng-controller="chatRequestController as chatRequestCtrl")
          button.button(ng-click="chatRequestCtrl.request('" + req.user.uid + "', '" + user.uid + "')")
            i.fi-comments
            = " Discussion instantanée"

  nav.expanded.button-group.profile-tabs
    a.button(class={active: activeTab === 'journal'}, href=user.userUrl) Journal
    a.button(class={active: activeTab === 'about'}, href=user.userUrl + '/about') À propos
    a.button(class={active: activeTab === 'friends'}, href=user.userUrl + '/friends') Amis
